@model PagedList.IPagedList<DemirStore.Models.tblUsers>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Heading = "Kullanıcılar";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Surname)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().isVerified)</th>
                            <th>Kullanıcı İşlemleri</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Surname)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().isVerified)</th>
                            <th>Kullanıcı İşlemleri</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.isVerified)</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "EditUser", new { id = item.Id }) |
                                    @Html.ActionLink("Sil", "DeleteUser", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="pagedList" style="float:right">
                    @Html.PagedListPager(Model, page => Url.Action("Users", new { page = page }), PagedListRenderOptions.PageNumbersOnly)
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->