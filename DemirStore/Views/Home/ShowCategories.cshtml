@model IEnumerable<DemirStore.Models.tblCategory>

@{
    Layout = null;
}

<div>
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                @foreach (var category in Model)
                {
                    <!-- shop -->
                    <div class="col-md-4 col-xs-6">
                        <div class="shop">
                            <div class="shop-img">
                                <img src="@category.PictureLink" alt="@category.Name">
                            </div>
                            <div class="shop-body">
                                <h3>@category.Name</h3>
                                <a href="@Url.Action("Store", "Home", new { id = category.Id })" class="cta-btn">Ürünleri İncele <i class="fa fa-arrow-circle-right"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- /shop -->
                }
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
</div>