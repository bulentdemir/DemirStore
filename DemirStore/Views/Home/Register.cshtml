@model DemirStore.Models.tblUsers

@{
    ViewBag.Title = "Kayıt Ol";
    ViewBag.Context = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:50px; width:450px; text-align:center; border-style:solid; border-width:1px; border-color:darkgrey; margin-left:auto; margin-right:auto">
    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h2>Kayıt Ol</h2>
            <br />
            <div class="form-group" style="float:left">
                @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "İsim", style = "Width:170px" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="float:right">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyisim", style = "Width:170px" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail", style = "Width:350px" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Pswd, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pswd, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre", style = "Width:350px" } })
                    @Html.ValidationMessageFor(model => model.Pswd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.ConfirmPswd, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPswd, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifreyi Onayla", style = "Width:350px" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPswd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon Numarası", style = "Width:350px" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input style="width:350px" type="submit" value="Kaydol" class="btn btn-block" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label class="text-danger">@ViewBag.DuplicateMessage</label>
                </div>
            </div>

        </div>
    }

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>
