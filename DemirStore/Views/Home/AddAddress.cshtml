@model DemirStore.Models.tblAddress

@{
    Layout = "~/Views/Shared/_UserAccount.cshtml";
}

<h2>Adres Ekle</h2>

@using (Html.BeginForm("AddAddress", "Home", FormMethod.Post)) 
